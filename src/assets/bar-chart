<script>
    function closeCookieNotice() {
        localStorage.setItem("cookie-notice", "dismissed");
        window.document.getElementById("cookie-notice")?.remove();
    }

	document.querySelector(".cookie-notice__close")?.addEventListener("click", closeCookieNotice);

    const dismissed =
        localStorage.getItem("cookie-notice") || window.document.cookie.match(/VZL_IN=/);
    if (!dismissed) {
        window.document.getElementById("cookie-notice")?.setAttribute("style", "display: block;");
    }
</script>

<script>
    window.vizzloIcons = '/site/img/icons.svg';

    function toggleTopButton(scrollPosition) {
        const topScrollButton = document.querySelector('#topScrollButton');
        
        if(!topScrollButton) return;

        if (scrollPosition > 0) {
            topScrollButton.classList.remove('d-none');
            return;
        }

        topScrollButton.classList.add('d-none');
    }

    // {# Update navbar and show “topScrollButton” upon scrolling. ------------- #}
    let lastScrollPosition = 0;
    let ticking = false;

    const navbar = document.querySelector('#navbar');

    function toggleNavbarColor(scrollPosition) {
        if (!navbar) {
            return;
        }

        if (scrollPosition > 0) {
            navbar.classList.remove('navbar-dark');
            navbar.classList.add('navbar-light', 'border-bottom', 'border-gray-200');
        } else {
            navbar.classList.remove('navbar-light', 'border-bottom', 'border-gray-200');
            navbar.classList.add('navbar-dark');
        }
    }

    window.addEventListener('scroll', function() {
        lastScrollPosition = window.pageYOffset;

        if (!ticking) {
            window.requestAnimationFrame(function() {
                let topScrollButton = document.querySelector('#topScrollButton');
                if (topScrollButton) {
                    if (lastScrollPosition > 0) {
                        topScrollButton.classList.remove('d-none');
                    } else {
                        topScrollButton.classList.add('d-none');
                    }
                }

                if (navbar?.classList.contains('fn-scroll-toggle')) {
                    toggleNavbarColor(lastScrollPosition)
                }
                ticking = false;
            });

            ticking = true;
        }
    });

    // {# ---------------------------------------------------------------------- #}

    document.addEventListener('DOMContentLoaded', function() {
        const navbar = document.querySelector('#navbar');
        const scrollToggleClass = 'fn-scroll-toggle';

        if (navbar?.classList.contains(scrollToggleClass)) {
            toggleNavbarColor(window.scrollY);
        }

        const backToMarketLink = document.querySelector("#backToMarketLink");

        if (backToMarketLink) {
            backToMarketLink.addEventListener("click", function (event) {
                const href = window.sessionStorage.getItem(lastMarketPageKey);

                if(href) {
                    event.preventDefault();
                    location.href = href;
                }
            });
        }

        const lastMarkedValue = window.location.pathname === "/" ? window.location.href + "vizzards" : window.location.href;
        const lastMarketPageKey = "lastMarketPage";

        if(/^\/graphs|^\/$/.test(window.location.pathname)) {
            window.sessionStorage.setItem(lastMarketPageKey, lastMarkedValue);
        }

        toggleTopButton(window.pageYOffset);
    });
</script>
    </body></html>

<script type="application/javascript">
	function getInnerHeight( elm ){
		const computed = getComputedStyle(elm),
			padding = parseInt(computed.paddingTop) + parseInt(computed.paddingBottom);

		return elm.clientHeight - padding
	}

	const triggerEvent = (el, eventName) => {
		let event;

		if (window.CustomEvent && typeof window.CustomEvent === 'function') {
			event = new CustomEvent(eventName);
		} else {
			event = document.createEvent('CustomEvent');
			event.initCustomEvent(eventName, true, true);
		}

		el.dispatchEvent(event);
	}


    var $body = document.querySelector("body");
    var topScrollButton = document.querySelector("#topScrollButton");
    var dataVizLastScrollPosition = 0;
    var dataVizTicking = false;
    var loryInstance = null;
    var readingInfoSide = document.querySelector("#sticky-bar__readinginfo");
    var articleHeight = getInnerHeight(document.querySelector("#article-wrapper"));
    var newSVG = document.createElementNS("http://www.w3.org/2000/svg", "svg");
    var btnTop = document.querySelector("#btn-top");
    var guideArtDescription = document.querySelectorAll(".guide-post__description");

    // Lazyload images when visible in viewport

    document.addEventListener("DOMContentLoaded", function() {
        var lazyImages = [].slice.call(document.querySelectorAll(".lazy"));

        if ("IntersectionObserver" in window) {
            var lazyImageObserver = new IntersectionObserver(function(entries, observer) {
                for (var i = 0; i < entries.length; i++) {
                    if (entries[i].isIntersecting) {
                        var lazyImage = entries[i].target;
                        lazyImage.src = lazyImage.dataset.src;

                        if (lazyImage.classList.contains("market-details__slide-img")) {
                            // custom lazyload for slider thumbs
							triggerEvent(document, "vzl-slide-image-loaded");
                            lazyImage.classList.remove("lazy");
                            lazyImageObserver.unobserve(lazyImage);
                            continue;
                        }

                        if (lazyImage.dataset.srcset) {
                            lazyImage.srcset = lazyImage.dataset.srcset;
                        }

                        lazyImage.classList.remove("lazy");
                        lazyImageObserver.unobserve(lazyImage);
                    }
                }
            });

            lazyImages.forEach(function(lazyImage) {
                lazyImageObserver.observe(lazyImage);
            });

            return;
        }

        // IE and Safari :( fallback

        lazyImages.forEach(function(img) {
            if (img.classList.contains("market-details__slide-img")) {
                triggerEvent(document, "vzl-slide-image-loaded");
            }

            img.setAttribute("src", img.getAttribute("data-src"));
            img.onload = function() {
                img.removeAttribute("data-src");
            };
        });
    });

    function setReadingInfo() {
		if(!readingInfoSide) return;
        readingInfoSide
            ?.classList.remove("sticky-bar__readinginfo--hidden");
		readingInfoSide.classList.add("sticky-bar__readinginfo--show");
    }

    function removeReadingInfo() {
		if(!readingInfoSide) return;
        readingInfoSide
            .classList.remove("sticky-bar__readinginfo--show")
        readingInfoSide.classList.add("sticky-bar__readinginfo--hidden");
    }

    function setScrollElements() {
        btnTop.classList.add("btn__totop-show");
    }

    function hideScrollElements() {
        btnTop.classList.remove("btn__totop-show");
    }

    function toggleReadingInfo(scrollPosition) {
        var postAnnotation = getInnerHeight(document.querySelector(".guide-post__annotation")) + getInnerHeight(document.querySelector(".lpsection-dashedline"));
        var titleSection =  document.querySelector(".title-section").clientHeight;
        setReadingInfoSize();
        if (scrollPosition > titleSection && scrollPosition < articleHeight - postAnnotation) {
            setReadingInfo();
            return;
        }
        removeReadingInfo();
    }

    function toggleArticleSidebar(scrollPosition) {
        if (scrollPosition > 0) {
            setScrollElements();
            toggleReadingInfo(scrollPosition);
            return;
        }
        removeReadingInfo();
        hideScrollElements();
    }

    //highlight the active section in the article

    function highlight(scrollPosition) {
        document.querySelectorAll("#sticky-bar__navigation a").forEach(function(currLink) {
            const refElement = document.querySelector(currLink.getAttribute("href"));
			const elementTop = refElement?.getBoundingClientRect()?.top + window.scrollY;
			const adjustedTop = Math.floor(elementTop) - 75;
            
            if (!refElement) {
                return;
            } else if (adjustedTop <= scrollPosition) {
                document.querySelectorAll("#sticky-bar__navigation ul li a").forEach(el => el.classList.remove("sticky__toc-element--active"));
                currLink.classList.add("sticky__toc-element--active");
            } else {
                currLink.classList.remove("sticky__toc-element--active");
            }
        });
    }

    function debounce(func, wait, immediate) {
        var timeout;
        return function() {
            var context = this,
                args = arguments;
            var later = function() {
                timeout = null;
                if (!immediate) func.apply(context, args);
            };
            var callNow = immediate && !timeout;
            clearTimeout(timeout);
            timeout = setTimeout(later, wait);
            if (callNow) func.apply(context, args);
        };
    }

    window.addEventListener("scroll", function() {
        dataVizLastScrollPosition = window.pageYOffset;

        if (!dataVizTicking) {
            window.requestAnimationFrame(function() {
                if (topScrollButton) {
                    toggleTopButton(dataVizLastScrollPosition);
                }

				toggleArticleSidebar(dataVizLastScrollPosition);
				highlight(dataVizLastScrollPosition);
				handlePie(dataVizLastScrollPosition);

                dataVizTicking = false;
            });

            dataVizTicking = true;
        }
    });

    function setReadingInfoSize() {
        // Fix size of the readingInfo fixed div
		if(!readingInfoSide) return; 
        if (window.innerWidth > 992) {
            readingInfoSide.style.width = document.querySelector("#sticky-bar__navigation").style.width;
            readingInfoSide.classList.remove("col-12");
        } else if (window.innerWidth < 992 && !readingInfoSide.classList.contains(".col-12")) {
            readingInfoSide.style.width = "auto";
            readingInfoSide.classList.add("col-12");
        }
    }

    // collapse mobile menu on big screen

    var handleResize = debounce(function() {
        if (window.innerWidth < 768) {
            return;
        }
        setReadingInfoSize();

        var scroll = document.body.scrollTop;

        if ($body.classList.contains("navbar--open")) {
            $body.classList.remove("navbar--open");
        }
    }, 50);

    window.addEventListener("resize", handleResize);

    //Back to top button

    btnTop.addEventListener("click", function(e) {
        window.scrollTo({top: 0, behavior: "smooth"});
    });

    // Pie chart in the side-bar

    var handlePie = function(scrollPosition) {
        var readingStatus = {
            size: 36,
            sectors: [
                {
                    percentage: 0.01
                },
                {
                    percentage: 0.99
                }
            ]
        };

        function pieScroll(scrollPos) {
            newSVG.setAttributeNS(
                null,
                "style",
                "width: " + readingStatus.size + "px; height: " + readingStatus.size + "px"
            );
            function calculateSectors(readingStatus) {
                const sectors = [];
                var fill = ["#45b5c3", "#e0e0e0"];
                var l = readingStatus.size / 2;
                var a = 0; // Angle
                var aRad = 0; // Angle in Rad
                var z = 0; // Size z
                var x = 0; // Side x
                var y = 0; // Side y
                var X = 0; // SVG X coordinate
                var Y = 0; // SVG Y coordinate
                var R = 0; // Rotation
                let arcSweep = 0;

                for (i = 0; i < readingStatus.sectors.length; i++) {
                    var readingSector = readingStatus.sectors[i];
                    a = 360 * readingSector.percentage;
                    const aCalc = a > 180 ? 360 - a : a;
                    aRad = (aCalc * Math.PI) / 180;
                    z = Math.sqrt(2 * l * l - 2 * l * l * Math.cos(aRad));
                    if (aCalc <= 90) {
                        x = l * Math.sin(aRad);
                    } else {
                        x = l * Math.sin(((180 - aCalc) * Math.PI) / 180);
                    }
                    y = Math.sqrt(z * z - x * x);
                    Y = y;
                    if (a <= 180) {
                        X = l + x;
                        arcSweep = 0;
                    } else {
                        X = l - x;
                        arcSweep = 1;
                    }
                    sectors.push({
                        percentage: readingSector.percentage,
                        label: readingSector.label,
                        color: fill[i],
                        arcSweep: arcSweep,
                        L: l,
                        X: X,
                        Y: Y,
                        R: R
                    });
                    R = R + a;
                }

                return sectors;
            }
            var readPercentage = ((100 / articleHeight) * scrollPos).toFixed(2);
            readingStatus.sectors[0].percentage = (readPercentage / 100).toFixed(2);
            readingStatus.sectors[1].percentage = 0.99 - readingStatus.sectors[0].percentage;
            const sectors = calculateSectors(readingStatus);
            return sectors;
        }

        if (scrollPosition > 0 && scrollPosition <= articleHeight) {
            const sectors = pieScroll(scrollPosition);
            for (i = 0; i < sectors.length; i++) {
                var sector = sectors[i];
                var newSector = document.createElementNS("http://www.w3.org/2000/svg", "path");
                newSector.setAttributeNS(null, "fill", sector.color);
                newSector.setAttributeNS(
                    null,
                    "d",
                    "M" +
                        sector.L +
                        "," +
                        sector.L +
                        " L" +
                        sector.L +
                        ",0 A" +
                        sector.L +
                        "," +
                        sector.L +
                        " 0 " +
                        sector.arcSweep +
                        ",1 " +
                        sector.X +
                        ", " +
                        sector.Y +
                        " z"
                );
                newSector.setAttributeNS(
                    null,
                    "transform",
                    "rotate(" + sector.R + ", " + sector.L + ", " + sector.L + ")"
                );
                newSVG.appendChild(newSector);
            }
            document.getElementById("sticky-bar__reading-pie").appendChild(newSVG);
        }
    };

    /// Cut article description

    function truncateText() {
        for (var i = 0; i < guideArtDescription.length; i++) {
            var textContent = guideArtDescription[i].textContent;
            var limit = 150;
            if (textContent.length >= limit) {
                textContent = textContent.substring(0, limit) + "...";
                guideArtDescription[i].innerHTML = textContent;
            }
        }

        return guideArtDescription;
    }

    truncateText(guideArtDescription);

    // cookie check to show/hide register areas in the article

    if (document.cookie.indexOf("VZL_SESSION") >= 0) {
        var regex = /VZL_SESSION.+[;]?/g;
        var cookieValue = regex.exec(document.cookie);
        if (cookieValue[0].indexOf("user") >= 0) {
            var registerCta = document.getElementsByClassName("register-cta");
            for (var i = 0; i < registerCta.length; i++) {
                registerCta[i].classList.add("d-none");
            }
        }
    }

    // article page - scrolls to page link

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener("click", function(event) {
			event.preventDefault();
			const scrollToElement = document.querySelector(anchor.getAttribute("href"));
			const scrollToY = scrollToElement?.getBoundingClientRect().top + window.scrollY;
			// scrollToElement.scrollIntoView({behavior: "smooth", block: "start"});
			console.log("scrollToY - 75", Math.floor(scrollToY) - 75);
			window.scrollTo({behavior: "smooth", top: Math.floor(scrollToY) - 75});
    	});
	}) 

    // article page - all external links will open in a new tab

    function detectExternalLinks() {
        var content = document.getElementsByClassName("guide-post__content");
        var links = document.links;

        for (var i = 0, linksLength = links.length; i < linksLength; i++) {
            if (links[i].hostname != window.location.hostname) {
                links[i].target = "_blank";
                links[i].rel = "noopener noreferrer";
            }
        }
    }

    detectExternalLinks();

    document.querySelector("#mobileDropdownToggleBtn")?.addEventListener("click", (e) => {
        document.querySelector("#mobileDropdown")?.classList.toggle("d-flex");
    });
</script>